<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/audio_select"
        style="@style/Button_Entrance"
        android:text="选择 WAV 文件" />

    <TextView
        android:id="@+id/audio_selected_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <Button
        android:id="@+id/audio_play_static"
        style="@style/Button_Entrance"
        android:text="开始播放（静态模式）" />

    <Button
        android:id="@+id/audio_play_stream"
        style="@style/Button_Entrance"
        android:text="开始播放（流模式）" />

    <Button
        android:id="@+id/audio_stop"
        style="@style/Button_Entrance"
        android:text="停止播放" />

</LinearLayout>