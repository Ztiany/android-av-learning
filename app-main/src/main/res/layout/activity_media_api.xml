<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp">

        <LinearLayout
            style="@style/LL_Block"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintWidth_percent="0.45">

            <Button
                android:id="@+id/audio_record_by_mr"
                style="@style/Button_Entrance"
                android:text="MediaRecord 录音" />

            <Button
                android:id="@+id/audio_record_by_ar"
                style="@style/Button_Entrance"
                android:text="AudioRecord 录音" />

            <Button
                android:id="@+id/audio_play_by_mp"
                style="@style/Button_Entrance"
                android:text="MediaPlayer 播放音频" />

            <Button
                android:id="@+id/audio_play_by_at"
                style="@style/Button_Entrance"
                android:text="AudioTrack 播放 WAV" />

            <Button
                android:id="@+id/audio_play_by_me_at"
                style="@style/Button_Entrance"
                android:text="MediaExtractor + AudioTrack 播放音频" />

            <Button
                android:id="@+id/audio_opensl"
                style="@style/Button_Entrance"
                android:text="OpenSLES 音频" />

            <Button
                android:id="@+id/audio_mixing_audio"
                style="@style/Button_Entrance"
                android:text="混音（给视频加背景音）" />

        </LinearLayout>

        <LinearLayout
            style="@style/LL_Block"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:orientation="vertical"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.45">

            <Button
                android:id="@+id/video_screen_recorder"
                style="@style/Button_Entrance"
                android:text="屏幕录制" />

            <Button
                android:id="@+id/video_mosaic"
                style="@style/Button_Entrance"
                android:text="视频拼接" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>